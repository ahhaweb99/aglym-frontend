---
title: Autoglym Contact Us
---



<section class="structure--mainarea structure--content inline-list  clearfix">
	<section class="structure--side-column">
		
	</section>
	
	<section id="normal--content" class="structure--main-column"><h1>Contact us</h1>
	<p class="large-para">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
	tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam</p>	
	<div class="form-errors">
		<div class="borders-top-bottom">
			<i class="icon-warning-sign"></i>
			<h3>There were problems with your form</h3>
		</div>
		<ul class="error-list">
			<li>Name can't be blank</li>
			<li>Email incorrect</li>
			<li>Message can't be blank</li>
			<li>Subject can't be blank</li>
		</ul>
		<hr class="hr-solid"/>

	</div>
	<div class="grid--container form--container">
		<form action="/">
			<fieldset>
				<div class="grid--half grid--one">
					<ul class="form-list">
						<li class="error">
							<label for="">Name*</label>
							<input type="text"/>
							 <p class="inline-errors">is invalid. and doesn't match confirmation</p>
						</li>
						<li>
							<label for="">Email Address*</label>
							<input type="email"/>
						</li>
						<li>
							<label for="">Subject*</label>
							<input type="text"/>
						</li>
					</ul>
				</div>
				<div class="grid--half grid--two">
					<hr class="hr-solid"/>
					<ul class="form-list">
						<li>
							<label for="">Message*</label>
							<textarea name="" id="" cols="30" rows="9"></textarea>
						</li>
						<li><input class="btn" type="submit"/></li>
					</ul>
					
				</div>
			</fieldset>
		</form>
	</div>
	</section>

	<section class="structure--widget-holder">
		<%= partial "shared/widgets/widget-product-of-the-month" %>
	
	</section>
</section>
